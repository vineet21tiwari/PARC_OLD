<div class="container">	
		
		<div class="row justify-content-center">
			<div class="col-10">
				<%= render 'shared/errors', obj: @user%>
				<%= form_with(model: @user, class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |form| %>	
				  <div class="form-group row">
				    <%= form.label :Firstname,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.text_field :first_name,class: "form-control shadow rounded",placeholder:"Enter Firstname" %>
				    </div>
				    
				    <%= form.label :Lastname,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.text_field :last_name,class: "form-control shadow rounded",placeholder:"Enter Lastname" %>
				    </div>
				  </div>
				
				  <div class="form-group row ">
				    <%= form.label :email,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.email_field :email,class: "form-control shadow rounded",placeholder:"Enter email-id"%>
				  </div>
				  
				  <%= form.label :phoneno,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.telephone_field :phoneno,class: "form-control shadow rounded",placeholder:"Enter Phoneno"%>
				  </div>
				  </div>
				  
				    <div class="form-group row ">
				    <%= form.label :age,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.number_field :age,class: "form-control shadow rounded",placeholder:"Enter your Age"%>
				  </div>
				  
				  <%= form.label :city,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.text_field :city,class: "form-control shadow rounded",placeholder:"Enter your City"%>
				  </div>
				  </div>
				  
				    <div class="form-group row ">
				    <%= form.label :occupation,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.text_field :occupation,class: "form-control shadow rounded",placeholder:"Enter your occupation"%>
				  </div>
				  
				  <%= form.label :organization,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.text_field :organization,class: "form-control shadow rounded",placeholder:"Enter your organization"%>
				  </div>
				  </div>
				  <div class="form-group row ">
				    <%= form.label :password,class: "col-2 col-form-label text-light" %>
				    <div class="col-4">
				    <%= form.password_field :password,class: "form-control shadow rounded",placeholder:"Choose a password"%>
				  </div>
				  </div>
				
				  <div class="form-group row justify-content-center">
				    <%= form.submit(@user.new_record? ? "Sign Up" :"Update Account", class: "btn btn-outline-light btn-lg")%>
				  </div>
				   <div class="form-group row justify-content-center">
				    <%= link_to "Login,if already registered", login_path,class: "col-2 col-form-label text-light"%>
				  </div>
				<% end %>
				<div class="form-group row justify-content-center">
				
				</div>
			</div>
		</div>
</div>
